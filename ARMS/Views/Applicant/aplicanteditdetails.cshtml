                                    Allocate
                                    <i class="fa fa-arrow-circle-right"></i>
                                </button>
                            </div>
                        </div>*@

                    </div>
                </div>

            </div>


            <hr>

            <div class="row" id="AllocateInterViewPanel">
                <div class="col-md-2 col-sm-2"></div>
